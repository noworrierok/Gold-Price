<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/back_gray_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_18"
        app:layout_constraintTop_toTopOf="@id/view_back"
        app:layout_constraintStart_toStartOf="@id/view_back"
        app:layout_constraintEnd_toEndOf="@id/view_back"
        app:layout_constraintBottom_toBottomOf="@id/view_back"
        android:contentDescription="@string/description_splash2" />

    <TextView
        android:id="@+id/txtHeaderItem"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_back"
        app:layout_constraintEnd_toStartOf="@id/view_back"
        android:layout_marginEnd="16dp"
        tools:text="@string/gold18"
        />
    <TextView
        android:id="@+id/txtInfoItem"
        android:textColor="@color/white_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtHeaderItem"
        app:layout_constraintBottom_toBottomOf="@id/view_back"
        app:layout_constraintEnd_toStartOf="@id/view_back"
        android:layout_marginEnd="16dp"
        tools:text="آخرین تغییرات :150 هزار"
        />

    <TextView
        android:id="@+id/txtPriceItem"
        android:textColor="@color/gold_text"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/txtHeaderItem"
        app:layout_constraintBottom_toBottomOf="@id/txtHeaderItem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        tools:text="2/559/000T"
        />

</androidx.constraintlayout.widget.ConstraintLayout>